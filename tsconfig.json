{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true, //any 타입 발생할 경우, 에러 발생
    "strictNullChecks": true, //null, undefined 타입에 다른 조작할 경우, 에러 발생
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules"],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}
